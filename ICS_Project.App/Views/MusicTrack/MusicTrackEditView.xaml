<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ICS_Project.App.ViewModels.MusicTrack"
             x:Class="ICS_Project.App.Views.MusicTrack.MusicTrackEditView"
             x:DataType="vm:MusicTrackEditViewModel">

    <Grid ColumnDefinitions="auto"
          RowDefinitions="auto, auto, auto"
          RowSpacing="5"
          BackgroundColor="DarkSlateGray">

        <Frame
            Grid.Column="0"
            Grid.Row="0"
            Grid.RowSpan="5"
            CornerRadius="5"
            IsClippedToBounds="true"
            BackgroundColor="{StaticResource CardBackgroundColor}"
            Padding="5">

            <VerticalStackLayout
                Padding="1"
                BackgroundColor="{StaticResource SecondaryCardBackgroundColor}"
                Spacing="5">

                <Button 
                    Text="Add to Playlist"
                    TextColor="{StaticResource PrimaryDarkText}"/>

                <Button
                    Text="Delete from Playlist"
                    TextColor="{StaticResource PrimaryDarkText}"/>

            </VerticalStackLayout>
        </Frame>

    </Grid>
</ContentView>