<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ICS_Project.App.Views.MusicTrack"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="ICS_Project.App.Views.MusicTrack.MusicTrackCreateNewPopup"
             Opened="MusicTrackCreateNewPopup_Opened"
             CanBeDismissedByTappingOutsideOfPopup="False" 
             Color="Transparent">
    <Frame 
        WidthRequest="600"
        HeightRequest="500"
        Padding="0"
        CornerRadius="12"
        BackgroundColor="{StaticResource PageBackgroundColor}"
        HasShadow="True"
        VerticalOptions="Center"
        HorizontalOptions="Center">
        <Grid RowDefinitions="Auto, *">
            <Grid Grid.Row="0" ColumnDefinitions="Auto, *, Auto" Margin="10">
                <!-- Image | Texty | Button -->

                <Image Grid.Column="0" 
                   Source="redhotchilli.png" 
                   WidthRequest="150" 
                   HeightRequest="150" 
                   Aspect="AspectFill" 
                   VerticalOptions="Start"/>    

                <StackLayout Grid.Column="1" 
                     Margin="10,0,10,0" 
                     VerticalOptions="Start">
                    <Entry Text="{Binding Title}" 
                        Placeholder="Název skladby" 
                        FontSize="Large" 
                        FontAttributes="Bold"/>
                    <Entry Text="{Binding Description}" 
                        Placeholder="Popis skladby" 
                        FontSize="12"/>
                    <HorizontalStackLayout Spacing="5" VerticalOptions="Center">
                        <Entry Text="{Binding FileSizeString}" 
                            Placeholder="Velikost" 
                            Keyboard="Numeric"
                            FontSize="Small">
                            <Entry.Behaviors>
                                <toolkit:EventToCommandBehavior
                                EventName="Unfocused"
                                Command="{Binding ParseAndCorrectFileSizeCommand}"/>
                            </Entry.Behaviors>
                        </Entry>
                        <Label Text="MB"
                               VerticalOptions="Center"/>
                    </HorizontalStackLayout>
                    <HorizontalStackLayout Spacing="5">
                        <Entry Text="{Binding HoursString}" 
                               Placeholder="HH" 
                               Keyboard="Numeric" 
                               MaxLength="2">
                            <Entry.Behaviors>
                                <toolkit:EventToCommandBehavior
                                    EventName="Unfocused"
                                    Command="{Binding ValidateAndCorrectHoursStringCommand}"/>
                            </Entry.Behaviors>
                        </Entry>
                        <Label Text=":" VerticalOptions="Center" />
                        <Entry Text="{Binding MinutesString}" 
                               Placeholder="MM" 
                               Keyboard="Numeric" 
                               MaxLength="2">
                            <Entry.Behaviors>
                                <toolkit:EventToCommandBehavior
                                    EventName="Unfocused"
                                    Command="{Binding ValidateAndCorrectMinutesStringCommand}"/>
                            </Entry.Behaviors>
                        </Entry>
                        <Label Text=":" VerticalOptions="Center" />
                        <Entry Text="{Binding SecondsString}" 
                               Placeholder="SS" 
                               Keyboard="Numeric" 
                               MaxLength="2">
                            <Entry.Behaviors>
                                <toolkit:EventToCommandBehavior
                                    EventName="Unfocused"
                                    Command="{Binding ValidateAndCorrectSecondsStringCommand}"/>
                            </Entry.Behaviors>
                        </Entry>
                    </HorizontalStackLayout>
                    <Entry Text="{Binding URL}" 
                        Placeholder="URL" 
                        FontSize="Medium" 
                        FontAttributes="Bold"/>
                </StackLayout>

                <!-- Save and discard changes buttons -->
                <StackLayout Grid.Column="2" Margin="10, 0, 10, 10" Spacing="20">
                    <Button x:Name="SaveButton" Text="Uložit" Command="{Binding SaveChangesCommand}"/>
                    <Button x:Name="RevertButton" Text="Zrušit změny" Command="{Binding RevertChangesCommand}"/>
                </StackLayout>
            </Grid>

            <Grid Grid.Row="1" RowDefinitions="Auto, Auto, *" ColumnDefinitions="*, *" Margin="10, 0, 10, 10" ColumnSpacing="20" RowSpacing="3">

                <!-- Search/Filter for autors-->
                <Grid Grid.Row="0" Grid.Column="0" ColumnDefinitions="*, Auto" Margin="10, 0, 10, 10">
                    <SearchBar Text="{Binding SearchbarAuthorsText}" 
                       SearchCommand="{Binding SearchAuthorsCommand}" 
                       Placeholder="Vyhledat autora" Grid.Column="0">
                        <SearchBar.Behaviors>
                            <toolkit:EventToCommandBehavior
                                EventName="TextChanged"
                                Command="{Binding SearchAuthorsCommand}"
                                EventArgsConverter="{StaticResource TextChangedEventArgsConverter}"/>
                        </SearchBar.Behaviors>
                    </SearchBar>
                </Grid>

                <Button Grid.Row="1" Grid.Column="0"
                    x:Name="NewAutorButton" Text="Přidat Autora" Clicked="OnNewArtistClicked"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    Padding="8"/>

                    <!-- Autors - Content -->
                <CollectionView Grid.Row="2" Grid.Column="0"
                    ItemsSource="{Binding Artists}"
                    VerticalOptions="Fill">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid ColumnDefinitions="Auto, *">
                                <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}" VerticalOptions="Center" />
                                <Label Grid.Column="1" Text="{Binding ArtistName}" VerticalOptions="Center"/>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
                

                <!-- Search/Filter for genres -->
                <Grid Grid.Row="0" Grid.Column="1" ColumnDefinitions="*, Auto" Margin="10, 0, 10, 10">
                    <SearchBar Text="{Binding SearchbarGenresText}" 
                       SearchCommand="{Binding SearchGenresCommand}" 
                       Placeholder="Vyhledat žánr" Grid.Column="0"
                       >
                        <SearchBar.Behaviors>
                            <toolkit:EventToCommandBehavior
                        EventName="TextChanged"
                        Command="{Binding SearchGenresCommand}"
                        EventArgsConverter="{StaticResource TextChangedEventArgsConverter}"/>
                        </SearchBar.Behaviors>
                    </SearchBar>
                </Grid>

                <!-- Button to add new Genre -->
                <Button Grid.Row="1" Grid.Column="1"
                    x:Name="NewGenreButton" Text="Přidat žánr" Clicked="OnNewGenreClicked"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    Padding="8"/> 

                <!-- Genres - Content -->
                <CollectionView Grid.Row="2" Grid.Column="1"
                                ItemsSource="{Binding Genres}"
                                VerticalOptions="Fill">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid ColumnDefinitions="Auto, *">
                                <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}" VerticalOptions="Center" />
                                <Label Grid.Column="1" Text="{Binding GenreName}" VerticalOptions="Center"/>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </Grid>
        </Grid>
    </Frame>
</toolkit:Popup>