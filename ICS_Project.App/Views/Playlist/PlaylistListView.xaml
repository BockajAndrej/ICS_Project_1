<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:playlist="using:ICS_Project.App.ViewModels.Playlist"
             x:Class="ICS_Project.App.Views.PlaylistListView"
             Title="PlaylistListView">


    <ContentPage.BindingContext>
        <playlist:PlaylistListViewModel />
    </ContentPage.BindingContext>

    <CollectionView ItemsSource="{Binding PlaylistList}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Grid ColumnDefinitions="Auto, *"
                      ColumnSpacing="10">
                    <Label Grid.Column="0"
                           FontSize="20"
                           TextColor="Blue"
                           Text="{Binding Name}"></Label>
                    <Label Grid.Column="1" 
                           Text="{Binding Description}"></Label>
                </Grid>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>

</ContentPage>
    